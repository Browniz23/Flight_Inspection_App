<UserControl x:Class="Flight_Inspection_App.Graphs.ShowGraph1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Flight_Inspection_App.Graphs"
             xmlns:oxy="http://oxyplot.codeplex.com"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=local:GraphViewModel}"
             d:DesignHeight="350" Width="600">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <oxy:Plot x:Name="Plot1" Title="A Graph" Grid.Column="1" Model="{Binding PlotModel}" Margin="5"/>
        <oxy:Plot x:Name="Plot_corr" Title="B Graph" Grid.Column="2" Model="{Binding PlotModel_corr}" Margin="5"/>
        <oxy:Plot x:Name="Plot_reg" Title="A Corr Graph" Model="{Binding PlotModel_reg}" Margin="5" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3"/>
        <ListBox x:Name="listbox" ItemsSource="{Binding vm_ChunkName, Mode=OneWay}" SelectedItem="{Binding ChosenChunk}" Grid.RowSpan="2"  Margin="5"/>
    </Grid>
</UserControl>
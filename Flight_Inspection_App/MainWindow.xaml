<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flight_Inspection_App"
        xmlns:Controls="clr-namespace:Flight_Inspection_App.controls"
        xmlns:viewModel="clr-namespace:Flight_Inspection_App.viewModel" x:Class="Flight_Inspection_App.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1020.667">

    <Grid x:Name="grid1" Background="LightSkyBlue">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>


        <Controls:videoControl x:Name="videoControl" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1" Margin="5"/>


        <Button Content="LoadCSVFile"  Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1"
                HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="95" Height="64" Click="Button_Click" Background="Beige"/>

        <Button Content="XML Settings" Grid.Row="2" Grid.Column="0"
                HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="114" Height="34" Click="Button_Click_2"/>
        <Image x:Name="V" Grid.Row="2" Grid.Column="1"
               Source="/images/V.jpg" HorizontalAlignment="Left" Height="34" VerticalAlignment="Top" Width="33" Margin="5" Visibility="Hidden" />
        <Image x:Name="X" Grid.Row="2" Grid.Column="1"
               Source="/images/X.jpg"  HorizontalAlignment="Left" Height="34" VerticalAlignment="Top" Width="33" Margin="5" />

        <Controls:Dashboard x:Name="dashboard" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="1" Margin="5"/>





    </Grid>
</Window>

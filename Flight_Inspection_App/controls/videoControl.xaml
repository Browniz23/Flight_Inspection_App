<UserControl x:Class="Flight_Inspection_App.controls.videoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Flight_Inspection_App.controls"
             xmlns:flight_inspection_app="clr-namespace:Flight_Inspection_App" 
             xmlns:viewmodel="clr-namespace:Flight_Inspection_App.viewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:videoControlsViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    
    <Grid>
        <ComboBox Name="speedBox" HorizontalAlignment="Left" Margin="451,27,0,0" VerticalAlignment="Top" Width="62"
                   SelectedItem="{Binding vm_selectedSpeed, Mode=TwoWay }" ItemsSource="{Binding vm_speeds, Mode=TwoWay}" FontSize="18" >
        </ComboBox>
        <TextBox Name="chooseSpeedBox" Margin="354,30,647,382" Text="Choose speed:" Background="{x:Null}" BorderBrush="{x:Null}" FontWeight="Bold" />
        <Slider x:Name="timeSlider" Width="100" Height="50" Margin="130,82,130,324" Value="{Binding vm_currLine}" Maximum="{Binding vm_lineLength}" TickFrequency="2" SmallChange="1" RenderTransformOrigin="0.5,0.5"/>
        <Button Name ="playPauseButton" Margin="673,0,363,381" Background="{x:Null}" BorderBrush="{x:Null}" Click="playPauseButton_Click">
            <StackPanel>
                <Image Source="/images/play_pause.png" Height="63" Width="33" />
                <TextBlock Text="Blabla" />
            </StackPanel>
        </Button>

    </Grid>
</UserControl>
